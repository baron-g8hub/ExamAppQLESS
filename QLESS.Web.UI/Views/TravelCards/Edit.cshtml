            <input type="hidden" asp-for="TravelCardID" />
            <div class="form-group">
                <label asp-for="CardHolder" class="control-label"></label>
                <input asp-for="CardHolder" class="form-control" />
                <span asp-validation-for="CardHolder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LoadBalance" class="control-label"></label>
                <input asp-for="LoadBalance" class="form-control" />
                <span asp-validation-for="LoadBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastUsedDate" class="control-label"></label>
                <input asp-for="LastUsedDate" class="form-control" />
                <span asp-validation-for="LastUsedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ValidityDate" class="control-label"></label>
                <input asp-for="ValidityDate" class="form-control" />
                <span asp-validation-for="ValidityDate" class="text-danger"></span>
            </div>
