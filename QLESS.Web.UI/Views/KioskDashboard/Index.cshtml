@{
    Layout = "_LayoutKiosk";
}

<style type="text/css">
    .button_theme_orange {
        border: 1px solid #f57224;
        background: #f57224;
        color: ghostwhite;
    }
    .button_theme_orange:hover {
        color: #ffff;
    }


</style>

<div class="container overflow-hidden bg-white p-3">
    <div class="row">
        <div class="col">
            <div class="col-12 p-3 border border-2 border-primary">
                <h4 class="text-center mb-3">Q-LESS Transport Card</h4>
                <div class="container px-4 mb-3">
                    <div class="row gx-5">
                        <div class="col">
                            <a class="btn btn-warning btn-lg" asp-area="Identity" asp-page="/CardTransactions/CardTransaction">
                                <i class="fa fa-cart-plus"></i>
                                Purchase Card
                            </a>
                        </div>
                        <div class="col">
                            <a class="btn button_theme_orange btn-lg" asp-controller="KioskDashboard" asp-action="CreateAccount">
                                <i class="fa fa-circle-plus"></i>
                                Add Cash Value
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col">
            <div class="col-12 p-3 border border-2 border-primary">
                <h4 class="text-center mb-3">Q-LESS Discounted Transport Card</h4>
                <div class="container px-4 mb-3">
                    <div class="row gx-5">
                        <div class="col">
                            <a class="btn btn-warning btn-lg" asp-controller="KioskDashboard" asp-action="CreateAccount">
                                <i class="fa fa-cart-plus"></i>
                                Purchase Card
                            </a>
                        </div>
                        <div class="col">
                            <a class="btn button_theme_orange btn-lg" asp-controller="KioskDashboard" asp-action="CreateAccount">
                                <i class="fa fa-circle-plus"></i>
                                Add Cash Value
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


