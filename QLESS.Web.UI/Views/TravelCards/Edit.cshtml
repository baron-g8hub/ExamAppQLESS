                <label asp-for="SCCNumber" class="control-label"></label>
                <input asp-for="SCCNumber" class="form-control" />
                <span asp-validation-for="SCCNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PWDNumber" class="control-label"></label>
                <input asp-for="PWDNumber" class="form-control" />
                <span asp-validation-for="PWDNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
