@page
@model AddValueCardTransactionModel
@{
    ViewData["Title"] = "Add Card Value Transaction";
}



<div class="container overflow-hidden  p-3">
    <div class="row">
        <div class="col ">
            <div class="col-12 p-3 border border-2 panel_border border-secondary">
                <h4 class="text-center mb-3">Q-LESS Transport Card</h4>
                <hr />
                <div class="container px-4 mb-3">
                    <div class="row gx-5">
                        <div class="col">
                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="container px-4 mb-3">
                                    <div class="row gx-5">
                                        <div class="col mb-3">
                                            <div class="form-floating">
                                                <select asp-for="Input.CardNumber" class="form-control" asp-items="@Model.RAWSMARTCARDList"></select>
                                                <label asp-for="Input.CardName"></label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row gx-5">
                                        <div class="col">
                                            <div class="form-floating">
                                                <label asp-for="Input.AmountTotal"></label>
                                            </div>
                                            <div class="form-floating">
                                                <input asp-for="Input.AmountTotal" class="form-control form-control-lg" autocomplete="amountreceived" aria-required="true" />
                                                <label asp-for="Input.AmountTotal"></label>
                                                <span asp-validation-for="Input.AmountTotal" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-floating">
                                                <label asp-for="Input.AmountReceived"></label>
                                            </div>
                                            <div class="form-floating">
                                                <input asp-for="Input.AmountReceived" class="form-control form-control-lg" autocomplete="amountreceived" aria-required="true" />
                                                <label asp-for="Input.AmountReceived"></label>
                                                <span asp-validation-for="Input.AmountReceived" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="form-floating">
                                                <label asp-for="Input.AmountChange"></label>
                                            </div>
                                            <div class="form-floating">
                                                <input asp-for="Input.AmountChange" class="form-control form-control-lg" autocomplete="amountreceived" aria-required="true" />
                                                <label asp-for="Input.AmountChange"></label>
                                                <span asp-validation-for="Input.AmountChange" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg button_theme_orange">OK</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>






<div class="row g-3">
</div>




@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
